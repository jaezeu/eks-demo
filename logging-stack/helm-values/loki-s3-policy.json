{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "LokiStorage",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:PutObject",
                "s3:GetObject",
                "s3:DeleteObject"
            ],
            "Resource": [
                "arn:aws:s3:::loki-chunks-sctp",
                "arn:aws:s3:::loki-chunks-sctp/*",
                "arn:aws:s3:::loki-ruler-sctp",
                "arn:aws:s3:::loki-ruler-sctp/*"
            ]
        }
    ]
}